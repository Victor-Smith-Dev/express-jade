extends ./layout.jade

block ptitle
	title Iniciar Sesión

block title
	h2 Iniciar Sesión

block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		form(action="/auth/login", method="POST")
			div(class="form-group")
				label(for="email") Email
				input(class="form-control" type="text" name="email" placeholder="Ingrese su email" id="email")
			div(class="form-group")
				label(for="password") Password
				input(class="form-control" type="password" name="password" placeholder="Ingrese su password" id="password")
			div(class="form-group")
				div(class="row")
					div(class="col-xs-12 col-md-6")
						input(class="btn btn-primary" type="submit" value="Enviar datos")
					div(class="col-xs-12 col-md-6 text-right")
						a(href="/auth/signup") No tengo cuenta
